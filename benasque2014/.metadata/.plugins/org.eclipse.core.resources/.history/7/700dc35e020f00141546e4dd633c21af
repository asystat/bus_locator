    /**** The mapfragment's id must be removed from the FragmentManager
     **** or else if the same it is passed on the next time then 
     **** app will crash ****/
    @Override
    public void onDestroyView() {
        super.onDestroyView();
        if (mMap != null) {
            getActivity().getSupportFragmentManager().beginTransaction()
                .remove(getActivity().getSupportFragmentManager().findFragmentById(R.id.location_map)).commit();
            mMap = null;
        }
    }

	@Override
	public void onMapClick(LatLng arg0) {
		// TODO Auto-generated method stub
		
	}
	
	private List<Marker> points;
	private void addPoint(LatLng point){
		if (points!=null)
			points=new ArrayList<Marker>();
		
		MarkerOptions marker = new MarkerOptions().position(
                new LatLng(point.latitude, point.longitude)).title("Parada " + points.size());

		points.add(p);
	}
}
