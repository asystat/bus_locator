<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/WizardPageContainer">

    <TextView style="@style/WizardPageTitle" />

    <ScrollView android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/WizardFormLabel"
                android:text="@string/label_nombre" />

            <EditText
                android:id="@+id/bus_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/hint_lineanombre"
                android:inputType="textCapWords"
                android:saveEnabled="false" />

            <TextView
                style="@style/WizardFormLabel"
                android:text="@string/label_codigo" />

            <EditText
                android:id="@+id/bus_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_codigo"
                android:layout_marginBottom="16dp"
                android:inputType="numberSigned"
                android:saveEnabled="false" />

            <TextView
                style="@style/WizardFormLabel"
                android:text="@string/label_clase" />

            <EditText
                android:id="@+id/bus_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:saveEnabled="false"
                android:hint="@string/hint_clase" />
            
        </LinearLayout>
    </ScrollView>
</LinearLayout>
